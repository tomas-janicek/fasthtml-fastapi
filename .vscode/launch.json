    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI",
            "consoleTitle": "Debug FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
        },
        {
            "name": "Debug FastHTML",
            "consoleTitle": "Debug FastHTML",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/ui/main.py",
            "env": {
                "PYTHONPATH": "."
            },
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Debug PyTest",
            "consoleTitle": "Debug PyTest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
        },
        {
            "name": "Create DB",
            "consoleTitle": "Create DB",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/cli.py",
            "args": [
                "create-db"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "."
            },
            "justMyCode": false,
        },
    ]
}